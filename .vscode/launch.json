{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Aspire Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CarvedRock.AppHost/bin/Debug/net9.0/CarvedRock.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CarvedRock.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "uriFormat": "https://localhost:17016",
                "pattern": "listening on:.*https://localhost:.*"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}